# 服务器配置
PORT=33201
NODE_ENV=development

# 数据库类型 (sqlite或mysql)
DB_TYPE=mysql

# JWT密钥（用于API认证）
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h

# MySQL数据库配置
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=infini_manager
DB_PORT=3307

# 邮件服务配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=notifications@example.com
MAIL_PASSWORD=your_mail_password_here
MAIL_FROM=Infini Manager <notifications@example.com>

# Telegram配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=combined

# 批量处理配置
BATCH_MAX_SIZE=100
BATCH_WORKER_COUNT=2

# Gmail IMAP/SMTP配置
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_PASSWORD=your_app_password_here
GMAIL_IMAP_HOST=imap.gmail.com
GMAIL_IMAP_PORT=993
GMAIL_IMAP_SECURE=true
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=465
GMAIL_SMTP_SECURE=true